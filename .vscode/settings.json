{
  // VS code
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false,
    "source.fixAll.tslint": false,
    "source.fixAll.stylelint": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  // ESLint
  // plugin: https://marketplace.visualstudio.com/items?itemName=dbaeumer.vscode-eslint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Typescript
  "typescript.tsdk": "node_modules/typescript/lib",

  // VScode IntelliCode
  // plugin: https://marketplace.visualstudio.com/items?itemName=VisualStudioExptTeam.vscodeintellicode
  "vsintellicode.typescript.completionsEnabled": true,
}
